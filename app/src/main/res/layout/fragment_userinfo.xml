<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_userInfo"
    android:background="#e6e6e6"
    >


        <ImageView
            android:alpha=".7"
            android:src="@drawable/background"
            android:id="@+id/fragment_userInfo_coll_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:translationZ="10dp"
            android:id="@+id/fragment_userInfo_userInfoLL"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/fragment_userInfo_icon"
                android:layout_width="120dp"
                android:layout_height="120dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fragment_userInfo_nickName"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="26sp"
                    android:text="昵称"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/fragment_userInfo_smallIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />

            </LinearLayout>

        </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_marginTop="200dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <com.google.android.material.card.MaterialCardView
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="20dp"
            android:id="@+id/fragment_userInfo_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:id="@+id/fragment_userInfo_mylikes"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:textColor="#8a8a8a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_mylikes"
                    />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="20dp"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#8a8a8a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_weight"
                    />
                <TextView
                    android:id="@+id/fragment_userInfo_display_weight"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#8a8a8a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/name_height"
                    />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/fragment_userInfo_display_height"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_userInfo_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:background="#FF0000"
        android:text="@string/name_logout"
        android:textColor="#ffffff"
        />
</LinearLayout>






</androidx.coordinatorlayout.widget.CoordinatorLayout>